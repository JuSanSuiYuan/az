// 标准库测试示例

fn main() int {
    println("=== AZ标准库测试 ===");
    println("");
    
    // 1. 字符串操作
    println("1. 字符串操作:");
    let str1 = "Hello";
    let str2 = " World";
    let combined = az_string_concat(str1, str2);
    println("  连接: " + combined);
    
    let upper = az_string_to_upper(combined);
    println("  大写: " + upper);
    
    let lower = az_string_to_lower(combined);
    println("  小写: " + lower);
    
    // 2. 数学运算
    println("");
    println("2. 数学运算:");
    let sqrt_val = az_sqrt(16.0);
    println("  sqrt(16) = " + az_float_to_string(sqrt_val));
    
    let pow_val = az_pow(2.0, 3.0);
    println("  2^3 = " + az_float_to_string(pow_val));
    
    let abs_val = az_abs_int(-42);
    println("  abs(-42) = " + az_int_to_string(abs_val));
    
    // 3. 文件操作
    println("");
    println("3. 文件操作:");
    let content = "Hello from AZ!";
    let write_result = az_write_file("test.txt", content);
    if (write_result == 0) {
        println("  文件写入成功");
        
        if (az_file_exists("test.txt")) {
            println("  文件存在确认");
            let read_content = az_read_file("test.txt");
            println("  读取内容: " + read_content);
        }
    }
    
    println("");
    println("=== 测试完成 ===");
    return 0;
}
